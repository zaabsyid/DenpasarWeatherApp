<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_weather"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/darkblue"
    android:layout_gravity="center"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="10dp"
    app:cardElevation="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_item_weather"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_few_clouds"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_cloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Few Clouds"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"
            card_view:layout_constraintStart_toEndOf="@+id/iv_item_weather"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25.4 - 26\u2103"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            card_view:layout_constraintStart_toEndOf="@+id/iv_item_weather"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_item_cloud" />

        <TextView
            android:id="@+id/tv_item_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1009 hpa"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            card_view:layout_constraintStart_toEndOf="@+id/iv_item_weather"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_item_temp" />

        <TextView
            android:id="@+id/tv_item_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="88%"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            card_view:layout_constraintStart_toEndOf="@+id/iv_item_weather"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_item_pressure" />

        <TextView
            android:id="@+id/tv_item_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40km/h"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            card_view:layout_constraintStart_toEndOf="@+id/iv_item_weather"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_item_humidity" />

        <TextView
            android:id="@+id/tv_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 Desember 2015 01:00"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>